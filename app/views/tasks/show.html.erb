<h1><%= @task.title %></h1>
<h4><%= @task.details %></h4>
<p><%= @task.completed %></p>

<%= link_to 'Back to all tasks', tasks_path  %>

<%= link_to 'Update this task', edit_task_path(@task) %>

<%= link_to 'Delete task', task_path(@task), method: :delete, data: { confirm: "Are you sure you want to delete?"}   %>
